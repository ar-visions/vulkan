{
    "name":   "vulkan",
    "version":"dev",
    "import": [
        "mx",
        {
            "name":     "moltenvk",
            "version":  "1.2.3",
            "commit":   "db8512a64f2c703e31ff7038b2859034062aa00f",
            "url":      "https://github.com/KhronosGroup/MoltenVK",
            "platforms":["mac"],
            "environment": {
                "VULKAN_SDK":"%INSTALL_PREFIX%/lib/Frameworks/MoltenVK",
                "VULKAN_LIBRARY_NAME":"MoltenVK"
            },
            "cmake":{
                "args": ["-DVK_USE_PLATFORM_METAL_EXT=Yes"]
            }
        },
        {
            "name":     "glfw",
            "version":  "3.3.8",
            "commit":   "7482de6",
            "url":      "https://github.com/glfw/glfw",
            "cmake": {
                "args": ["-DGLFW_VULKAN_STATIC=Yes"]
            }
        },
        {
            "name":     "freetype",
            "version":  "2.13.0",
            "commit":   "4d8db130ea4342317581bab65fc96365ce806b77",
            "url":      "https://github.com/freetype/freetype",
            "cmake": {
                "args": ["-DFT_DISABLE_BROTLI=Yes"],
                "path": "."
            }
        },
        {
            "name":     "harfbuzz",
            "version":  "7.3.0",
            "commit":   "4584bcd",
            "url":      "https://github.com/harfbuzz/harfbuzz",
            "cmake":    {
                "args": ["-DHB_HAVE_FREETYPE=Yes"]
            }
        }
    ]
}
